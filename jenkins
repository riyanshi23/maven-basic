pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                bat 'echo "Compile and build commands go here"'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'echo "Test commands go here"'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                bat 'echo "Deployment commands go here"'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
